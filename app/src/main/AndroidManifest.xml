<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicapp">

    <!-- Quyền đọc file nhạc -->
    <!-- Android 13+ (API 33+): READ_MEDIA_AUDIO -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <!-- Android 12 trở xuống: dùng READ_EXTERNAL_STORAGE; giới hạn tới API 32 để tránh cảnh báo -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Foreground Service để phát nhạc -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <!-- Android 13+: quyền hiện thông báo -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Nếu có phát online -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ProMusic"
        android:theme="@style/Theme.MusicApp">

        <!-- MainActivity là LAUNCHER, áp theme Splash để dùng SplashScreen API -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MusicApp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Service phát nhạc (Android 14+ cần type mediaPlayback như dưới) -->
        <service
            android:name=".player.MusicService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- Media buttons (tai nghe/lockscreen) -->
        <receiver
            android:name="androidx.media.session.MediaButtonReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
