<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicapp">

    <!-- Quyền đọc nhạc trong máy -->
    <!-- Android 13+ (API 33+): dùng READ_MEDIA_AUDIO -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <!-- Android 12 trở xuống: dùng READ_EXTERNAL_STORAGE -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Chạy foreground service để phát nhạc -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <!-- Android 13+: muốn hiện notification phải xin quyền này -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Nếu có gọi API/ảnh bìa online mới cần; phát file trong máy thì có thể bỏ -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Service: KHÔNG được ghi .kt; phải là tên lớp -->
        <service
            android:name=".player.MusicService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- Receiver cho nút tai nghe / lockscreen (Media buttons) -->
        <receiver
            android:name="androidx.media.session.MediaButtonReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
