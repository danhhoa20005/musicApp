<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme chính sau khi rời splash -->
    <style name="Theme.MusicApp" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Theme Splash -->
    <style name="Theme.MusicApp.Splash" parent="Theme.SplashScreen">
        <!-- Logo giữa màn splash (PNG trong suốt) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_text_music_app_inset </item>
        <!-- Nền phẳng đồng bộ với gradient chính -->
        <item name="windowSplashScreenBackground">@color/bg_splash</item>
        <!-- Theme sẽ áp sau khi splash biến mất -->
        <item name="postSplashScreenTheme">@style/Theme.MusicApp</item>

    </style>

</resources>
