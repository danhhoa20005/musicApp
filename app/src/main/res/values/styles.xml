<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Alias: nếu đâu đó còn @style/Shape -->
    <style name="Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ====== SHAPE OVERLAY (bo góc) ====== -->
    <style name="Shape.Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Shape.Rounded.12">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Shape.Rounded.16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Shape.Corner12">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="Shape.RoundPlayer">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/player_cover_radius</item>
    </style>
    <!-- ====== TAB LAYOUT ====== -->
    <style name="Widget.Music.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <!-- vẽ “pill” -->
        <item name="tabIndicator">@drawable/tab_indicator_pill</item>
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabIndicatorHeight">32dp</item>

        <item name="tabTextAppearance">@style/TextAppearance.Music.Tab</item>
        <item name="tabTextColor">@color/tab_text_normal</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>

        <!-- dùng ColorStateList -->
        <item name="tabMode">scrollable</item>
        <item name="tabInlineLabel">true</item>
    </style>

    <style name="TextAppearance.Music.Tab" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

</resources>
