<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_dark_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Thanh tiêu đề nhỏ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/buttonCollapse"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/text_secondary"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="@string/close" />

            <TextView
                android:id="@+id/textNowPlaying"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/now_playing"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/buttonMore"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/text_secondary"
                android:src="@android:drawable/ic_menu_more"
                android:contentDescription="@string/menu" />
        </LinearLayout>

        <!-- Tên thư mục -->
        <TextView
            android:id="@+id/textFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/download"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Ảnh bìa lớn -->
        <ImageView
            android:id="@+id/imageCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_art_placeholder"
            android:src="@android:drawable/ic_media_play"
            app:tint="@color/text_tertiary"
            android:contentDescription="@string/cover_image" />

        <!-- Tiêu đề bài hát -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/song_title_placeholder"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Tên nghệ sĩ -->
        <TextView
            android:id="@+id/textArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist_placeholder"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Thanh tiến trình -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:thumbTint="@color/seek_thumb"
            android:progressTint="@color/seek_progress"
            android:progressBackgroundTint="@color/seek_track" />

        <!-- Thời gian (dùng weight để tách 2 đầu) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textElapsed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0:00"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Cụm điều khiển -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/buttonRepeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                app:tint="@color/text_secondary"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="@string/repeat" />

            <ImageButton
                android:id="@+id/buttonPrev"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                app:tint="@color/text_primary"
                android:src="@android:drawable/ic_media_previous"
                android:contentDescription="@string/previous" />

            <ImageButton
                android:id="@+id/buttonPlayPause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@android:color/transparent"
                app:tint="@color/text_primary"
                android:src="@android:drawable/ic_media_play"
                android:contentDescription="@string/playpause"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/buttonNext"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                app:tint="@color/text_primary"
                android:src="@android:drawable/ic_media_next"
                android:contentDescription="@string/next" />

            <ImageButton
                android:id="@+id/buttonShuffle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                app:tint="@color/text_secondary"
                android:src="@android:drawable/ic_menu_rotate"
                android:contentDescription="@string/shuffle" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
