<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="0dp"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:shapeAppearanceOverlay="@style/Shape.Rounded.16"
    app:rippleColor="@drawable/ripple_brand">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:padding="12dp"
        android:background="@android:color/transparent">

        <!-- Ảnh: đổi shapeAppearanceOverlay để dùng đúng style như Player, bỏ clipToOutline -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageArt"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/cover_image"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_logo"
            app:shapeAppearanceOverlay="@style/Shape.RoundPlayer" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/imageArt"
            app:layout_constraintEnd_toStartOf="@id/textDuration"
            app:layout_constraintTop_toTopOf="@id/imageArt" />

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/textTitle"
            app:layout_constraintEnd_toStartOf="@id/textDuration"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintBottom_toBottomOf="@id/imageArt" />

        <TextView
            android:id="@+id/textDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/textTitle"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
