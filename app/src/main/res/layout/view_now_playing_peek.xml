<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nowPlayingPeek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#0E5C2A"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/peek_imageArt"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/cover_image"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logo" />

        <TextView
            android:id="@+id/peek_textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginStart="14dp"
            app:layout_constraintEnd_toStartOf="@id/peek_btnPrev"
            app:layout_constraintStart_toEndOf="@id/peek_imageArt"
            app:layout_constraintTop_toTopOf="@id/peek_imageArt" />

        <TextView
            android:id="@+id/peek_textSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/peek_imageArt"
            app:layout_constraintEnd_toStartOf="@id/peek_btnPrev"
            app:layout_constraintStart_toStartOf="@id/peek_textTitle"
            app:layout_constraintTop_toBottomOf="@id/peek_textTitle" />

        <ImageView
            android:id="@+id/peek_btnPrev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            app:tint="@color/icon_secondary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/peek_btnPlayPause"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_skip_right" />

        <ImageView
            android:id="@+id/peek_btnPlayPause"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/peek_btnNext"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_play"
            app:tint="@color/text_primary" />

        <ImageView
            android:id="@+id/peek_btnNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:contentDescription="@string/next"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_skip_next"
            app:tint="@color/icon_secondary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
