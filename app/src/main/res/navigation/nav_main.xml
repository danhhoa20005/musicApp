<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/flashFragment">

    <!-- Splash (Flash) -->
    <fragment
        android:id="@+id/flashFragment"
        android:name="com.example.musicapp.ui.flash.FlashFragment"
        android:label="Flash">
        <action
            android:id="@+id/action_flashFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
    </fragment>

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.musicapp.ui.library.LibraryFragment"
        android:label="Library" >
        <action
            android:id="@+id/action_libraryFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.musicapp.ui.player.PlayerFragment"
        android:label="Player" />
</navigation>
